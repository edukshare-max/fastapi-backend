# ============================================
# CONFIGURACIÓN DE COSMOS DB
# ============================================
# IMPORTANTE: Obtén estos valores de Render.com > Dashboard > Environment
# O desde Azure Portal > Cosmos DB Account > Settings > Keys

COSMOS_URL=https://tu-cosmos-account.documents.azure.com:443/
COSMOS_KEY=tu-cosmos-primary-key-aqui
COSMOS_DATABASE=sasu_db

# Contenedores existentes
COSMOS_CONTAINER_CARNETS=carnets
COSMOS_CONTAINER_NOTAS=notas
COSMOS_CONTAINER_CITAS=citas
COSMOS_CONTAINER_PROMOCIONES_SALUD=promociones_salud
COSMOS_CONTAINER_VACUNACIONES=tarjeta_vacunacion

# Nuevos contenedores para autenticación
COSMOS_CONTAINER_USUARIOS=usuarios
COSMOS_CONTAINER_AUDITORIA=auditoria

# Partition keys
COSMOS_PK_CITAS=/id

# ============================================
# CONFIGURACIÓN JWT
# ============================================
JWT_SECRET_KEY=tu-secret-key-super-segura-cambiala-en-produccion-12345678
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=8

# ============================================
# DEBUG (opcional)
# ============================================
DEBUG_CITAS=false
